<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Pasien Rumah Sakit</title>
    
    <!-- Link CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Link Bootstrap Icons (jika diperlukan) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>

    <!-- Konten Anda di sini (Tabel, dsb) -->

    <div class="container mt-4">
        <h2 class="text-center mb-4">Daftar Pasien Rumah Sakit</h2>
        <div class="d-flex justify-content-end mb-3">
            <a href="/pasien/tambah" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Tambah Pasien
            </a>
        </div>
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Umur</th>
                    <th scope="col">Alamat</th>
                    <th scope="col" class="text-center">Aksi</th>
                </tr>
            </thead>
            <tbody>
                <!-- Loop Pasien -->
                <% pasien.forEach(function(p, index) { %>
                <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td><%= p.nama %></td>
                    <td><%= p.umur %> tahun</td>
                    <td><%= p.alamat %></td>
                    <td class="text-center">
                        <a href="/pasien/edit/<%= p.id %>" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a href="/pasien/hapus/<%= p.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Yakin ingin menghapus?')">
                            <i class="bi bi-trash"></i> Hapus
                        </a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Link JS Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
